# ===================================================
# TriFlow AI - Staging Environment Variables
# ===================================================
# For staging/testing environment
# Copy to .env.staging and fill in values
# ===================================================

# ===========================================
# Application
# ===========================================
APP_NAME=TriFlow AI (Staging)
APP_VERSION=0.1.0
ENVIRONMENT=staging

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=triflow_staging
POSTGRES_PASSWORD=staging_db_password
POSTGRES_DB=triflow_ai_staging
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===========================================
# Redis
# ===========================================
REDIS_PASSWORD=staging_redis_password
REDIS_MAX_CONNECTIONS=20

# ===========================================
# MinIO (Object Storage)
# ===========================================
MINIO_ACCESS_KEY=triflow_staging
MINIO_SECRET_KEY=staging_minio_secret
MINIO_BUCKET_NAME=triflow-ai-staging
MINIO_SECURE=false

# ===========================================
# AI Models
# ===========================================
ANTHROPIC_API_KEY=sk-ant-your-staging-api-key
DEFAULT_LLM_MODEL=claude-sonnet-4-5-20250929
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60

# ===========================================
# Security
# ===========================================
SECRET_KEY=staging_secret_key_change_for_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===========================================
# CORS & Domain
# ===========================================
CORS_ORIGINS=https://staging.your-domain.com,http://localhost:1420

# ===========================================
# OAuth2 - Google
# ===========================================
GOOGLE_CLIENT_ID=staging-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=staging-client-secret
GOOGLE_REDIRECT_URI=https://staging.your-domain.com/api/v1/auth/google/callback

# ===========================================
# Ports
# ===========================================
BACKEND_PORT=8000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ===========================================
# Logging (Verbose for debugging)
# ===========================================
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# ===========================================
# Monitoring
# ===========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=staging_grafana_password
GRAFANA_ROOT_URL=https://staging-monitoring.your-domain.com

# ===========================================
# Notifications (Staging channel)
# ===========================================
SLACK_WEBHOOK_URL=
SLACK_DEFAULT_CHANNEL=#staging-alerts
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_USE_TLS=true
