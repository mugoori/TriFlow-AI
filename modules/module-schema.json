{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://triflow.ai/schemas/module-manifest.json",
  "title": "TriFlow AI Module Manifest",
  "description": "Schema for TriFlow AI plugin module manifest files",
  "type": "object",
  "required": ["module_code", "name", "category", "version"],
  "properties": {
    "module_code": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$",
      "description": "Unique module identifier (lowercase, underscores allowed)",
      "examples": ["quality_analytics", "chat", "dashboard"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)",
      "examples": ["1.0.0", "2.1.3"]
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Display name for the module"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Brief description of the module functionality"
    },
    "category": {
      "type": "string",
      "enum": ["core", "feature", "industry", "integration"],
      "description": "Module category"
    },
    "icon": {
      "type": "string",
      "description": "Lucide icon name (e.g., LayoutDashboard, MessageSquare)"
    },
    "default_enabled": {
      "type": "boolean",
      "default": false,
      "description": "Whether the module is enabled by default for new tenants"
    },
    "requires_subscription": {
      "type": ["string", "null"],
      "enum": ["free", "standard", "enterprise", null],
      "description": "Minimum subscription plan required"
    },
    "depends_on": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of module codes this module depends on"
    },
    "display_order": {
      "type": "integer",
      "minimum": 0,
      "default": 100,
      "description": "Order in navigation menu (lower = higher priority)"
    },
    "backend": {
      "type": "object",
      "description": "Backend configuration",
      "properties": {
        "router_path": {
          "type": "string",
          "description": "Python module path to the router (e.g., modules.chat.backend.router)"
        },
        "api_prefix": {
          "type": "string",
          "pattern": "^/api/v\\d+/",
          "description": "API route prefix (e.g., /api/v1/chat)"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "OpenAPI tags for the router"
        },
        "services": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of service module paths to initialize"
        }
      }
    },
    "frontend": {
      "type": "object",
      "description": "Frontend configuration",
      "properties": {
        "page_component": {
          "type": "string",
          "description": "Main page component name (e.g., ChatPage)"
        },
        "route": {
          "type": "string",
          "description": "Custom route path (defaults to /{module_code})"
        },
        "admin_only": {
          "type": "boolean",
          "default": false,
          "description": "Whether this module is only visible to admins"
        },
        "hide_from_nav": {
          "type": "boolean",
          "default": false,
          "description": "Whether to hide from navigation menu"
        }
      }
    },
    "config_schema": {
      "type": "object",
      "description": "JSON Schema for module-specific configuration"
    },
    "author": {
      "type": "string",
      "description": "Module author name or organization"
    },
    "license": {
      "type": "string",
      "description": "License identifier (e.g., MIT, Apache-2.0, proprietary)"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "URL to the module's source repository"
    }
  },
  "additionalProperties": false
}
