/**
 * {{ name }} Page
 * Generated by TriFlow Module Generator
 */
import React, { useState } from 'react';
import { {{ icon }}, Plus, RefreshCw } from 'lucide-react';
import {
  ModulePageLayout,
  DataTable,
  DataTableColumn,
  useModuleTable,
  useModuleFilters
} from '@/shared';

interface {{ pascal_name }} {
  id: string;
  {% for field in fields %}
  {{ field.name }}: {{ field.typescript_type }};
  {% endfor %}
  created_at: string;
  updated_at: string;
}

export default function {{ pascal_name }}Page() {
  const [showCreateForm, setShowCreateForm] = useState(false);

  // 필터 상태
  const { filters, updateFilter, resetFilters, activeFilterCount } = useModuleFilters({
    {% for field in fields %}
    {% if field.filterable %}
    {{ field.name }}: {% if field.typescript_type == 'string' %}''{% else %}null{% endif %},
    {% endif %}
    {% endfor %}
  });

  // 테이블 데이터 (공유 Hook 사용)
  const {
    items,
    loading,
    error,
    page,
    totalPages,
    sortBy,
    sortOrder,
    setPage,
    setSortBy,
    reload
  } = useModuleTable<{{ pascal_name }}>(
    '/api/v1/{{ module_code.replace("_", "-") }}',
    20,
    { filters }
  );

  const columns: DataTableColumn<{{ pascal_name }}>[] = [
    {% for field in fields %}
    {
      key: '{{ field.name }}',
      label: '{{ field.label }}',
      sortable: true
    },
    {% endfor %}
    {
      key: 'created_at',
      label: '생성일',
      sortable: true,
      render: (item) => new Date(item.created_at).toLocaleString('ko-KR')
    }
  ];

  return (
    <ModulePageLayout
      icon={ {{ icon }} }
      title="{{ name }}"
      description="{{ description }}"
      actions={
        <>
          <button
            onClick={reload}
            className="px-4 py-2 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-800 text-slate-700 dark:text-slate-300"
          >
            <RefreshCw className="w-4 h-4 inline mr-2" />
            새로고침
          </button>
          <button
            onClick={() => setShowCreateForm(true)}
            className="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
          >
            <Plus className="w-4 h-4 inline mr-2" />
            새로 만들기
          </button>
        </>
      }
    >
      {/* 필터 패널 */}
      {% if fields|selectattr('filterable')|list|length > 0 %}
      <div className="bg-white dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700 p-4 mb-4">
        <div className="flex items-center justify-between mb-3">
          <h3 className="text-sm font-medium text-slate-700 dark:text-slate-300">
            필터 {activeFilterCount > 0 && (
              <span className="ml-2 px-2 py-0.5 bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 rounded text-xs">
                {activeFilterCount}개 활성
              </span>
            )}
          </h3>
          {activeFilterCount > 0 && (
            <button
              onClick={resetFilters}
              className="text-sm text-blue-600 dark:text-blue-400 hover:underline"
            >
              초기화
            </button>
          )}
        </div>

        <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
          {% for field in fields %}
          {% if field.filterable %}
          <div>
            <label className="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
              {{ field.label }}
            </label>
            {% if field.filter_type == 'select' %}
            <select
              value={filters.{{ field.name }} || ''}
              onChange={(e) => updateFilter('{{ field.name }}', e.target.value || null)}
              className="w-full px-3 py-2 bg-slate-50 dark:bg-slate-900 border border-slate-300 dark:border-slate-600 rounded-lg"
            >
              <option value="">모두</option>
              {% for option in field.filter_options %}
              <option value="{{ option.value }}">{{ option.label }}</option>
              {% endfor %}
            </select>
            {% elif field.filter_type == 'text' %}
            <input
              type="text"
              value={filters.{{ field.name }} || ''}
              onChange={(e) => updateFilter('{{ field.name }}', e.target.value || null)}
              placeholder="{{ field.label }} 검색"
              className="w-full px-3 py-2 bg-slate-50 dark:bg-slate-900 border border-slate-300 dark:border-slate-600 rounded-lg"
            />
            {% endif %}
          </div>
          {% endif %}
          {% endfor %}
        </div>
      </div>
      {% endif %}

      {/* 데이터 테이블 */}
      <DataTable
        columns={columns}
        data={items}
        loading={loading}
        error={error}
        page={page}
        totalPages={totalPages}
        sortBy={sortBy}
        sortOrder={sortOrder}
        onPageChange={setPage}
        onSort={(key) => {
          if (sortBy === key) {
            setSortOrder(sortOrder === 'asc' ? 'desc' : 'asc');
          } else {
            setSortBy(key);
            setSortOrder('asc');
          }
        }}
        emptyMessage="{{ name }} 데이터가 없습니다"
      />

      {/* TODO: 생성/수정 폼 모달 추가 */}
    </ModulePageLayout>
  );
}
